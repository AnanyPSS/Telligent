<%= simple_form_for([@article, @article.comments.build]) do |f| %>

	<div class="field">
		<div class="control">
			<%= f.input :response, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
		</div>
	</div>
	
	<%= f.button :submit, 'Leave Comment', class: 'button is-info' %>
<% end %>