<%= render 'hero' %>

<section class="section">
  <div class="container">
    <div class="columns">
    	<% if user_signed_in?%>
    		<%= render 'profile'%>
    	<% else %>
      		<%= render 'trends'%>

        <%= link_to article, class: "article" do %>
        <%= image_tag(article.user_shot_url) %>
        <div class="article-data">
          <h3 class="article-title"><%= article.title %></h3>
          <div class="article-description"><%= truncate(article.article, length: 30) %></div>
          <div class="article-time">
              <%= time_ago_in_words(article.created_at) %>
          </div>
        </div>
        <% end %>

      </div>
    </div>
    <% end %>
  </div>
</section>
