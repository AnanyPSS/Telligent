<div class="section">
	<div class="container">
	<h1 class="title is-3"><%= @article.title %></h1>
		<div class="columns">
			<div class="column is-8">
				<span class="by has-text-grey-light">by <%= @article.user.name %> posted on <%= verbose_date(@article.created_at) %> </span>
 
			<div class="column is-3 is-offset-1">
				<div class="nav panel show-article-analytics">
					<div class="panel-block views data">
						<span class="icon"><i class="fa fa-eye"></i></span>
						0   View
					</div>
					<div class="panel-block comments data">
						<span class="icon"><i class="fa fa-comment"></i></span>
						0   Comment
					</div>
					<div class="panel-block likes data">
						<span class="icon"><i class="fa fa-heart"></i></span>
						0   Likes
					</div>
				</div>
			</div>


			<div class="box">
			<div class="media">
				<div class="content">
					<p><%= @article.article %></p></br>
				</div>

				<% if user_signed_in? && (current_user.id == @article.user_id) %>		
					<nav class="buttons has-addons">
								<div class="field">
						<%= link_to 'Edit', edit_article_path(@article), class: "button is-info" %>
						<%= link_to 'Delete', article_path, class: "button is-info", method: :delete, data: { confirm: 'Are you sure you want to delete this article?'} %>
								</div>
					</nav>
				<% end %>
			</div>
			</div>
		</div>
	</div>
</div>
